#!/usr/bin/env fish
argparse h/help -- $argv
set exitcode $status

function help
    echo 'Usage: fpass [-h|--help]' >&2
    echo >&2
    echo '  Synopsis:' >&2
    echo '    Password manager using fuzzy finder' >&2
    echo >&2
    echo '  Options:' >&2
    echo '    -h, --help      Show list of command-line options' >&2
end

if test $exitcode -ne 0 || set --query --local _flag_help
    help
    return $exitcode
end

cd ~/.password-store

set pass_store_cache (mktemp)
set interrupt 0

trap "rm $pass_store_cache" SIGHUP SIGINT SIGTERM

find . -type d -path '*/.*' -prune -o -type f -name '*.gpg' -printf '%P\n' | sort --version-sort | while read --line line
    path change-extension '' $line >>$pass_store_cache
end

while test $interrupt -eq 0 && set selection (fzf --layout=reverse --no-sort <$pass_store_cache)
    pass $selection
    pass --clip $selection
    read --line --prompt-str '' || set interrupt 1
end

rm $pass_store_cache
