{
    "layer": "top",
    "modules-left": ["sway/workspaces", "sway/mode", "custom/mpris"],
    "modules-center": ["custom/weather", "clock"],
    "modules-right": ["pulseaudio", "memory", "memory#swap", "cpu", "temperature", "sway/language", "tray"],
    "custom/mpris": {
        "exec": "playerctl -f ' {{status}} {{trunc(title, 50)}}\n {{album}}   {{artist}}' metadata | sed -e 's/Playing/ /g' -e 's/Paused/ /g'",
        "interval": 1,
        "signal": 2,
        "on-click": "playerctl play-pause"
    },
    "custom/weather": {
        "exec": "openweather",
        "interval": 30,
        "return-type": "json",
        "format": "{}"
    },
    "clock": {
        "interval": 1,
        "format": "{:%Y年%m月%d日 (%a)  %H:%M:%S}",
        "tooltip-format": "<big>{:%Y年 %B}</big>\n<tt>{calendar}</tt>",
        "today-format": "<span background='#5294e2'><b>{}</b></span>",
        "format-calendar-weekdays": "<u><b>{}</b></u>"
    },
    "pulseaudio": {
        "format": "<span color='#52c7e2'>{icon}</span> {volume}%",
        "format-bluetooth": "{volume}% {icon}",
        "format-bluetooth-muted": " {icon}",
        "format-muted": "",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol",
        "ignored-sinks": ["Audio/Sink Recording", "NullSink Mix", "Navi 21/23 HDMI/DP Audio Controller デジタルステレオ (HDMI)"]
    },
    "memory": {
        "format": "<span color='#5294e2'></span> {used:0.1f}G / {total:0.1f}G",
        "tooltip": false
    },
    "memory#swap": {
        "format": "<span color='#e2e052'></span> {swapUsed:0.1f}G / {swapTotal:0.1f}G",
        "tooltip": false
    },
    "cpu": {
        "format": "<span color='#55c15c'></span> {load:0.2f}"
    },
    "temperature": {
        "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
        "format": "<span color='#e2528f'>{icon}</span> {temperatureC}°C",
        "format-icons": ["", "", ""],
        "tooltip": false
    },
    "sway/language": {
        "tooltip": false
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10
    }
}
