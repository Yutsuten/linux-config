{
    "layer": "top",
    "modules-left": ["sway/workspaces", "sway/mode", "mpris"],
    "modules-center": ["clock", "custom/weather"],
    "modules-right": ["pulseaudio", "memory", "cpu", "temperature", "sway/language", "tray"],
    "mpris": {
        "format": "{status_icon} {title}",
        "max-length": 60,
        "tooltip-format": " {artist}\n {album}",
        "status-icons": {
            "playing": " ",
            "paused": " ",
            "stopped": " "
        },
        "ignored-players": ["firefox"]
    },
    "custom/weather": {
        "exec": "openweather",
        "interval": 30,
        "return-type": "json",
        "format": "{}"
    },
    "clock": {
        "interval": 1,
        "format": "{:%Y年%m月%d日 (%a)  %H:%M:%S}",
        "format-alt": "{:%EY%m月%d日 (%a)  %H:%M:%S}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-scroll": -1,
            "format": {
                "months": "<b>{}</b>",
                "weekdays": "<u><b>{}</b></u>",
                "today": "<span background='#5294e2'><b>{}</b></span>"
            }
        },
        "actions":  {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "pulseaudio": {
        "format": "<span color='#52c7e2'>{icon}</span> {volume}%",
        "format-bluetooth": "{volume}% {icon}",
        "format-bluetooth-muted": " {icon}",
        "format-muted": "",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol",
        "ignored-sinks": ["Audio/Sink Recording", "NullSink Mix", "Navi 21/23 HDMI/DP Audio Controller デジタルステレオ (HDMI)"]
    },
    "memory": {
        "format": "<span color='#5294e2'></span> {used:0.1f}G / {total:0.1f}G",
        "tooltip-format": " {swapUsed:0.1f}G / {swapTotal:0.1f}G ({swapPercentage}%)"
    },
    "cpu": {
        "format": "<span color='#55c15c'></span> {load:0.2f}"
    },
    "temperature": {
        "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
        "format": "<span color='#e2528f'>{icon}</span> {temperatureC}°C",
        "format-icons": ["", "", ""]
    },
    "sway/language": {
        "format": "{flag}",
        "tooltip-format": "{long}"
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10
    }
}
